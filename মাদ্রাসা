import React, { useEffect, useState } from "react";

function App() {
  const [students, setStudents] = useState([]);
  const [name, setName] = useState("");

  const API = process.env.REACT_APP_API_URL || "";

  useEffect(() => {
    fetch(API + "/api/students")
      .then(r => r.json())
      .then(setStudents)
      .catch(() => setStudents([]));
  }, []);

  const addStudent = async () => {
    if (!name) return alert("ржирж╛ржо ржжрж┐ржи");
    const res = await fetch(API + "/api/students", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ name, class: "рзлржо" })
    });
    const data = await res.json();
    alert(data.message || "рж╕ржорзНржкржирзНржи");
    // reload
    const s = await fetch(API + "/api/students").then(r => r.json());
    setStudents(s);
    setName("");
  };

  return (
    <div className="container">
      <h1>ЁЯХМ ржЖржорж╛рж░ рж╢рж┐ржХрзНрж╖рж╛ тАФ ржорж╛ржжрзНрж░рж╛рж╕рж╛ ржорзНржпрж╛ржирзЗржЬржорзЗржирзНржЯ</h1>

      <div className="card">
        <h2>ржЫрж╛рждрзНрж░-ржЫрж╛рждрзНрж░рзА</h2>
        <input placeholder="ржирж╛ржо рж▓рж┐ржЦрзБржи" value={name} onChange={e=>setName(e.target.value)} />
        <button onClick={addStudent}>ржЫрж╛рждрзНрж░ ржпрзЛржЧ ржХрж░рзБржи</button>

        <ul>
          {students.map(s => (
            <li key={s.id}>{s.name} тАФ {s.class}</li>
          ))}
        </ul>
      </div>

      <div className="card">
        <h2>ржжрзНрж░рзБржд рж▓рж┐ржВржХ</h2>
        <p>ржЖржкржирж┐ ржПржЦрж╛ржирзЗ рж▓ржЬрж┐ржХ ржмрж░рзНржзржи ржХрж░рзЗ рж╢рж┐ржХрзНрж╖ржХ, ржмрзЗрждржи, ржЙржкрж╕рзНржерж┐рждрж┐ ржЗрждрзНржпрж╛ржжрж┐ ржорзНржпрж╛ржирзЗржЬ ржХрж░рждрзЗ ржкрж╛рж░ржмрзЗржиред</p>
      </div>
    </div>
  );
}

export default App;
